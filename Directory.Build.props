<Project>

  <!-- Global Properties -->
  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
      <NoWarn>RS1038</NoWarn>
  </PropertyGroup>

  <!-- Package Metadata -->
  <PropertyGroup>
    <Authors>Daniel Karlsson</Authors>
    <Copyright>Copyright (c) 2025 Daniel Karlsson</Copyright>
    <PackageProjectUrl>https://github.com/motiv-solutions/Motiv.FluentFactory.Generator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/motiv-solutions/Motiv.FluentFactory.Generator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <!-- Version Management -->
  <PropertyGroup>
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <PackageVersion>1.0.0</PackageVersion>
  </PropertyGroup>
</Project>